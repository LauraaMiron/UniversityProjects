<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.myplantapp.AddPlantActivity">


    <TextView
        android:id="@+id/addPlantHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Add a plant"
        android:textColor="@color/green"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/addPlantHeading"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the name"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/addPlantHeading"
        android:background="@drawable/green_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/lastWateredEditText"
        android:layout_width="387dp"
        android:layout_height="63dp"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_border"
        android:gravity="top"
        android:hint="Enter the last date watered"
        android:padding="12dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/wateringIntervalEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the watering interval"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/lastWateredEditText"
        android:background="@drawable/green_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"/>
</RelativeLayout>